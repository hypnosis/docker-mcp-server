{
  "name": "@hypnosus/docker-mcp-server",
  "version": "0.1.0",
  "description": "Universal Docker MCP server for AI assistants (Cursor, Claude Desktop)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "docker-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
