{
  "name": "@hypnosis/docker-mcp-server",
  "version": "1.2.1",
  "description": "Universal Docker MCP server for AI assistants (Cursor, Claude Desktop)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "docker-mcp-server": "dist/index.js",
    "docker-mcp-server-cli": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit/",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run tests/e2e/categories/",
    "test:e2e:watch": "vitest tests/e2e/categories/",
    "test:e2e:container": "vitest run tests/e2e/categories/container-tools.test.ts",
    "test:e2e:database": "vitest run tests/e2e/categories/database-tools.test.ts",
    "test:e2e:executor": "vitest run tests/e2e/categories/executor-tool.test.ts",
    "test:e2e:env": "vitest run tests/e2e/categories/env-tools.test.ts",
    "test:e2e:utility": "vitest run tests/e2e/categories/utility-tools.test.ts",
    "test:e2e:discovery": "vitest run tests/e2e/categories/discovery-tools.test.ts",
    "test:e2e:compose": "vitest run tests/e2e/categories/compose-tools.test.ts",
    "test:e2e:errors": "vitest run tests/e2e/categories/error-handling.test.ts",
    "test:e2e:profile": "vitest run tests/e2e/categories/profile-parameter.test.ts",
    "test:all": "npm run test && npm run test:e2e",
    "precommit": "./pre-commit.sh",
    "docker:test:up": "docker-compose -f docker-compose.test.yml up -d",
    "docker:test:down": "docker-compose -f docker-compose.test.yml down",
    "docker:test:logs": "docker-compose -f docker-compose.test.yml logs -f",
    "docker:test:clean": "docker-compose -f docker-compose.test.yml down -v",
    "prepublishOnly": "npm run build && npm test",
    "publish:dry": "npm pack --dry-run",
    "publish:check": "npm pack && tar -tzf *.tgz | head -20 && rm -f *.tgz",
    "publish:npm": "npm publish --access public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "dockerode": "^4.0.2",
    "dotenv": "^16.4.5",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.31",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "docker",
    "docker-compose",
    "cursor",
    "claude",
    "ai",
    "model-context-protocol"
  ],
  "author": "Danila Susak",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hypnosis/docker-mcp-server.git"
  }
}
